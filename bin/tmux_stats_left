#!/usr/bin/env python
# coding: utf-8
import getpass
import socket


def get_user_info():
    return ['{user}@{host}'.format(user=getpass.getuser(), host=socket.gethostname())]


def main():

    lines = []
    lines += get_user_info()

    print '{} '.format(' | '.join(lines))


if __name__ == '__main__':
    main()
